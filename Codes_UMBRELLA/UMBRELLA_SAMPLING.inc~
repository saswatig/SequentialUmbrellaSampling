C=====NOOFPARTICLES.inc SHOULD B INCLUDED BEFORE========C
C=====NCYCLE SHOULD B GIVEN BEFORE THIS=================C
c=====NCYCLE SHOULD B A INTEGRAL MULTIPLE OF UBINS======C
   
	DOUBLE PRECISION XUM(N),YUM(N),BOXXUM,BOXYUM

	INTEGER UBINS,RUNINBIN
	PARAMETER (UBINS=400) !NUMBER OF UMBRELLA SAMPLING BINS
	PARAMETER (RUNINBIN=NCYCLE/UBINS)

	DOUBLE PRECISION LOWLIMUM,HIGLIMUM,RNGEUM,BINSZ
	PARAMETER (LOWLIMUM=0.0D0,HIGLIMUM=0.20D0) !LOWER AND UPPER LIMIT OF THE GLOBALLY AVERAGED NON-AFFINITY PARAMETER 
	PARAMETER (RNGEUM=HIGLIMUM-LOWLIMUM)
	PARAMETER (BINSZ=RNGEUM/DFLOAT(UBINS+1))

	DOUBLE PRECISION UHISTO(UBINS,2)

	INTEGER CHECK_UM_CONF

	INTEGER BINNO
	DOUBLE PRECISION LBND,UBND

	COMMON/UM_SAMP1/XUM,YUM,BOXXUM,BOXYUM,UHISTO,CHECK_UM_CONF

	COMMON/UM_SAMP2/LBND,UBND,BINNO
