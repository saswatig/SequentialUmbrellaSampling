C	INCLUDED IN MAIN_PRO.f BEFORE UMBRELLA_SAMLING.inc
C==========================================
	INTEGER NCYCLE,NCOLLECT
	PARAMETER (NCYCLE=2000000000,NCOLLECT=2000000) !NCYCLE: NUMBER OF MC CYCLES, NCOLLECT: NUMBER OF STEPS AFTER WHICH DATA IS COLLECTED
C------------------------------------------


C	INCLUDED IN POSITIONS_PRO.f
C==========================================
	DOUBLE PRECISION RHO
	PARAMETER (RHO=1.15470D0) !INITIAL DENSITY
C------------------------------------------


C	INCLUDED IN MC_MOVE_PRO.f AND MC_VOL_PRO.f
C==========================================
	DOUBLE PRECISION MDELX,MDELY
	PARAMETER (MDELX=0.20D0,MDELY=0.20D0) !MAXIMUM CHANGE IN X AND Y PARTICLE COORDINATES IN AN MC MOVE AS A FRACTION OF THE INITIAL LATTICE PARAMETER
	DOUBLE PRECISION BETA
	PARAMETER (BETA=200) !BETA=1/K_{B}T, K_{B}=1, T=TEMPERATURE IN REDUCED UNIT 
C------------------------------------------


C	INCLUDED IN MC_VOL_PRO.f
C==========================================
	DOUBLE PRECISION VXMAX,VYMAX
	PARAMETER (VXMAX=0.01D0,VYMAX=0.01D0) !2*MAXIMUM CHANGE IN BOX DIMENTIONS AS A FRACTION OF INITIAL BOX DIMENSION FOR A VOLUME MOVE
c********** defined in MC_MOVE_PRO.f **************
	DOUBLE PRECISION CONSTP
	PARAMETER (CONSTP=0.050d0) !CONSTANT PRESSURE FOR NPT ENSEMBLE
C------------------------------------------


C	INCLUDED IN ENERGY_PRO.f
C==========================================
	DOUBLE PRECISION H
	PARAMETER (H=-0.050D0) !THE NON-AFFINE FIELD (-VE H ENHANCES NON-AFFINITY)
C------------------------------------------


C	INCLUDED IN ENERGY_HARMONIC_PRO.f
C==========================================
	DOUBLE PRECISION ECONST
	PARAMETER (ECONST=1.0D0) !ELASTIC MODULUS OF THE HARMONIC SPRINGS
C------------------------------------------


C	SWITCH FOR NVT AND NPT ENSEMBLE
C==========================================
	INTEGER SW_ENSEMBLE
	PARAMETER(SW_ENSEMBLE=1)	!IF SW_ENSEMBLE=1: NVT,  SW_ENSEMBLE=2: NPT 
C------------------------------------------
